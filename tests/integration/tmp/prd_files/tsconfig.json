{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["apps/**/*.ts", "servers/**/*.ts", "packages/**/*.ts", "apps/backend/ormconfig.cjs"],
  "exclude": ["node_modules", "dist"]
}
