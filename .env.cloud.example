# ChatBotDysa Enterprise - Cloud Environment Configuration
# Copy this file to .env.cloud and fill with your production values

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=chatbotdysa_prod
DATABASE_PASSWORD=your_super_secure_database_password_here
DATABASE_NAME=chatbotdysa_production
DATABASE_SSL=require

# ==============================================
# REDIS CACHE CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_64_chars_minimum
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_here

# ==============================================
# EXTERNAL AI SERVICES
# ==============================================
# Local Ollama (recommended for enterprise)
OLLAMA_URL=http://ollama:11434

# OpenAI API (optional backup)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ==============================================
# WHATSAPP BUSINESS API
# ==============================================
WA_BUSINESS_PHONE_ID=your_whatsapp_phone_id
WA_ACCESS_TOKEN=your_whatsapp_access_token
WA_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ==============================================
# TWILIO CONFIGURATION (OPTIONAL)
# ==============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FRONTEND URLS
# ==============================================
API_URL=https://api.chatbotdysa.com
WS_URL=wss://api.chatbotdysa.com

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# DataDog (APM & Metrics)
DATADOG_API_KEY=your_datadog_api_key

# Grafana Admin
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
# Let's Encrypt or custom SSL certificates
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ==============================================
# SCALING CONFIGURATION
# ==============================================
BACKEND_REPLICAS=3
ADMIN_PANEL_REPLICAS=2
NGINX_REPLICAS=2

# ==============================================
# RESOURCE LIMITS
# ==============================================
BACKEND_MEMORY_LIMIT=1G
BACKEND_CPU_LIMIT=1.0
POSTGRES_MEMORY_LIMIT=2G
REDIS_MEMORY_LIMIT=512M
OLLAMA_MEMORY_LIMIT=4G

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
API_DOMAIN=api.chatbotdysa.com
ADMIN_DOMAIN=admin.chatbotdysa.com
MONITORING_DOMAIN=monitoring.chatbotdysa.com

# ==============================================
# COMPANY INFORMATION
# ==============================================
COMPANY_NAME=Your Restaurant Name
PRODUCT_NAME=ChatBot Your Restaurant
SUPPORT_EMAIL=support@yourrestaurant.com
WEBSITE_URL=https://yourrestaurant.com

# ==============================================
# CLOUD PROVIDER SPECIFIC (Choose one)
# ==============================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=chatbotdysa-uploads

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET=chatbotdysa-uploads

# Azure Configuration
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_CONTAINER=chatbotdysa-uploads

# ==============================================
# COMPLIANCE & SECURITY
# ==============================================
# Enable audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# SOC2 Compliance
SOC2_LOGGING_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# ==============================================
# PERFORMANCE TUNING
# ==============================================
# Connection pools
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Cache settings
CACHE_TTL=3600
SESSION_TTL=86400

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BLOCK_DURATION_MS=3600000