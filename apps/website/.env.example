# ================================
# ChatBotDysa Website - Environment Variables  
# ================================
#
# IMPORTANTE: Copiar este archivo a .env.local:
#   cp .env.example .env.local
#
# Luego editar .env.local con tus valores reales.
# NUNCA commitear archivos .env.local al repositorio
# ================================

# ================================
# API Backend
# ================================
NEXT_PUBLIC_API_URL=http://localhost:8005/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:8005

# ================================
# Application URLs
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:7001
NEXT_PUBLIC_ADMIN_URL=http://localhost:7001
NEXT_PUBLIC_WEBSITE_URL=http://localhost:6001

# Producción:
# NEXT_PUBLIC_WEBSITE_URL=https://chatbotdysa.com
# NEXT_PUBLIC_API_URL=https://api.chatbotdysa.com/api
# NEXT_PUBLIC_ADMIN_URL=https://admin.chatbotdysa.com

# ================================
# Database (Para Prisma - Opcional)
# ================================
DATABASE_URL=postgresql://postgres:supersecret@localhost:15432/chatbotdysa

# Producción:
# DATABASE_URL=postgresql://user:password@host:5432/chatbotdysa_production

# ================================
# Analytics (Opcional)
# ================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Feature Flags
# ================================
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Producción:
# NEXT_PUBLIC_ENABLE_DEMO=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ================================
# Sentry (Error Tracking - Opcional)
# ================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o1234567.ingest.sentry.io/1234567
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
