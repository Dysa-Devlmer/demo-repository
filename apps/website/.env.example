# ChatBotDysa Enterprise+++++ Website Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8005/api
NEXT_PUBLIC_APP_URL=http://localhost:7001
NEXT_PUBLIC_WIDGET_URL=http://localhost:7002
NEXT_PUBLIC_WEBSITE_URL=http://localhost:6001

# Database (for multi-tenant functionality)
DATABASE_URL="postgresql://postgres:supersecret@localhost:15432/chatbotdysa?schema=public"

# Authentication
NEXTAUTH_SECRET=your-super-secret-nextauth-secret
NEXTAUTH_URL=http://localhost:6001

# Payment Integration
# CRÍTICO - Mercado Pago (reemplaza Stripe/PayPal)
# Obtener en: https://www.mercadopago.cl/developers/panel/credentials
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxxxx-xxxxxx-xxxxxx-xxxxxxxxxxxx
# TEST (desarrollo): TEST-xxxxxxxx-xxxxxx-xxxxxx-xxxxxx-xxxxxxxxxxxx
# PROD (producción): APP_USR-xxxxxxxx-xxxxxx-xxxxxx-xxxxxx-xxxxxxxxxxxx

# NOTA: El Access Token va en el BACKEND, no aquí

# Stripe (backup - no en uso):
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (no en uso):
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Transbank (no en uso):
TRANSBANK_API_KEY=your_transbank_api_key
TRANSBANK_SECRET=your_transbank_secret
TRANSBANK_ENVIRONMENT=integration

# Email Service (for notifications)
# CRÍTICO - SendGrid (reemplaza SMTP)
# Obtener en: https://app.sendgrid.com/settings/api_keys
# NOTA: Las claves de SendGrid van en el BACKEND
# Ver apps/backend/.env.example para configuración completa

# SMTP (backup - no en uso):
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics & Monitoring
# CRÍTICO PARA PRODUCCIÓN - Configurar HOY
# Google Analytics 4:
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Obtener en: https://analytics.google.com → Admin → Create Property

# Meta Pixel (Facebook):
NEXT_PUBLIC_META_PIXEL_ID=123456789012345
# Obtener en: https://business.facebook.com/events_manager

# Hotjar (opcional):
NEXT_PUBLIC_HOTJAR_ID=1234567
# Obtener en: https://www.hotjar.com

# Feature Flags
FEATURE_MULTI_LANGUAGE=true
FEATURE_STRIPE_PAYMENT=true
FEATURE_PAYPAL_PAYMENT=true
FEATURE_TRANSBANK_PAYMENT=false
FEATURE_DEMO_MODE=true

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-for-internal-auth

# Multi-tenant Configuration
TENANT_SUBDOMAIN_PATTERN=*.chatbotdysa.cl
TENANT_DEFAULT_SCHEMA=public
TENANT_ISOLATION_LEVEL=schema

# External Services
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_business_token
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://cdn.chatbotdysa.cl
NEXT_PUBLIC_ASSETS_URL=https://assets.chatbotdysa.cl

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=es
NEXT_PUBLIC_SUPPORTED_LOCALES=es,en,fr

# Development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug