# ============================================
# ChatBotDysa Admin Panel - Production Environment
# ============================================
# Copy to .env.production and configure
# ============================================

# Application
NODE_ENV=production
HOSTNAME=0.0.0.0
PORT=7001

# Backend API
NEXT_PUBLIC_API_URL=https://api.tudominio.com
BACKEND_URL=http://backend:8005

# NextAuth
NEXTAUTH_URL=https://admin.tudominio.com
NEXTAUTH_SECRET=CAMBIAR_EN_PRODUCCION_SECRET_KEY

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Restaurant Info
NEXT_PUBLIC_RESTAURANT_NAME=Mi Restaurante
NEXT_PUBLIC_RESTAURANT_TIMEZONE=America/Santiago
