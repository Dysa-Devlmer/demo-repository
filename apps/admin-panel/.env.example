# ================================
# ChatBotDysa Admin Panel - Environment Variables
# ================================
#
# IMPORTANTE: Copiar este archivo a .env.local:
#   cp .env.example .env.local
#
# Luego editar .env.local con tus valores reales.
# NUNCA commitear archivos .env.local al repositorio
# ================================

# ================================
# API Backend
# ================================
NEXT_PUBLIC_API_URL=http://localhost:8005
NEXT_PUBLIC_API_BASE_URL=http://localhost:8005/api

# ================================
# Application URLs
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:7001
NEXT_PUBLIC_ADMIN_URL=http://localhost:7001
NEXT_PUBLIC_WEBSITE_URL=http://localhost:6001

# Producci贸n:
# NEXT_PUBLIC_APP_URL=https://admin.chatbotdysa.com
# NEXT_PUBLIC_API_URL=https://api.chatbotdysa.com

# ================================
# NextAuth (Autenticaci贸n)
# ================================
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET=CAMBIAR_ESTE_SECRET_POR_UNO_SEGURO_DE_32_CARACTERES
NEXTAUTH_URL=http://localhost:7001

# Producci贸n:
# NEXTAUTH_URL=https://admin.chatbotdysa.com

# ================================
# Feature Flags
# ================================
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Producci贸n:
# NEXT_PUBLIC_ENABLE_DEMO_MODE=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ================================
# Analytics (Opcional)
# ================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Sentry (Error Tracking - Opcional)
# ================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o1234567.ingest.sentry.io/1234567
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
