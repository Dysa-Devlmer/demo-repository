  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:test": "nest start",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix --cache --cache-location .eslintcache --cache-strategy content --no-error-on-unmatched-pattern",
    "lint:check": "eslint \"src/**/*.ts\" --max-warnings=0 --cache --cache-location .eslintcache --cache-strategy content --no-error-on-unmatched-pattern",
    "lint:check:test": "eslint \"test/**/*.ts\" --max-warnings=0 --cache --cache-location .eslintcache --cache-strategy content --no-error-on-unmatched-pattern",
    "lint:check:core": "eslint \"src/alerts/**/*.ts\" \"src/metrics/**/*.ts\" \"src/security/**/*.ts\" \"src/auth/**/*.ts\" --max-warnings=0 --cache --cache-location .eslintcache --cache-strategy content --no-error-on-unmatched-pattern",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:enterprise": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "test:unit": "jest --testPathPattern=unit --coverage --coverageReporters=lcov,text-summary",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:security": "npm audit && npm run test:security:deps && npm run test:security:code",
    "test:security:deps": "npm audit --audit-level=moderate",
    "test:security:code": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && npm run test:security:snyk",
    "test:security:snyk": "echo 'Install Snyk CLI for security scanning: npm install -g snyk && snyk test'",
    "test:performance": "artillery run test/performance/load-test.yml",
    "test:stress": "artillery run test/performance/stress-test.yml",
    "test:api": "newman run test/api/chatbotdysa-api.postman_collection.json",
    "test:smoke": "jest --testPathPattern=smoke --detectOpenHandles",
    "test:contract": "jest --testPathPattern=contract",
    "test:mutation": "stryker run",
    "test:all": "npm run lint && npm run test:enterprise && npm run test:performance && npm run test:api",
    "quality:check": "npm run lint && npm run test:cov && npm run test:security",
    "quality:sonar": "sonar-scanner",
    "ci:test": "npm run quality:check && npm run test:e2e",
    "ci:deploy": "npm run build && npm run test:smoke",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/database/data-source.ts"
  },
