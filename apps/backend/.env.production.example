# ============================================
# ChatBotDysa Backend - Production Environment
# ============================================
# Ejemplo de configuración para PRODUCCIÓN
# Copiar a .env.production y configurar valores reales
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=8005
APP_NAME=ChatBotDysa Backend

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=CAMBIAR_EN_PRODUCCION
DATABASE_NAME=chatbotdysa
DATABASE_SCHEMA=public
DATABASE_SYNC=false
DATABASE_LOGGING=false

# ============================================
# REDIS (Cache)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT
# ============================================
JWT_SECRET=CAMBIAR_EN_PRODUCCION_SECRET_KEY_MUY_SEGURA
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=CAMBIAR_EN_PRODUCCION_REFRESH_SECRET_KEY
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SENDGRID (Email Service)
# ============================================
SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXX
SENDGRID_FROM_EMAIL=noreply@tudominio.com
SENDGRID_FROM_NAME=ChatBotDysa

# ============================================
# MERCADOPAGO (Payments)
# ============================================
MERCADOPAGO_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXXXXXXXX
MERCADOPAGO_PUBLIC_KEY=APP_USR-XXXXXXXXXXXXXXXXXX
MERCADOPAGO_MODE=production

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# ============================================
# TWILIO (SMS/Voice)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# OLLAMA (AI Service)
# ============================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest

# ============================================
# CORS
# ============================================
CORS_ORIGIN=https://tudominio.com,https://admin.tudominio.com
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# RESTAURANT INFO (Configurar por cada cliente)
# ============================================
RESTAURANT_ID=restaurante_demo
RESTAURANT_NAME=Mi Restaurante
RESTAURANT_TIMEZONE=America/Santiago
