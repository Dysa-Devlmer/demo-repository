          "// Enterprise Pre-request Script",
          "console.log('üöÄ Executing Enterprise API Test:', pm.info.requestName);",
          "",
          "// Set dynamic variables",
          "pm.environment.set('timestamp', Date.now());",
          "pm.environment.set('uuid', pm.globals.replaceIn('{{$guid}}'));",
          "",
          "// Enterprise headers",
          "pm.request.headers.add({",
          "    key: 'X-API-Version',",
          "    value: '1.0'",
          "});",
          "",
          "pm.request.headers.add({",
          "    key: 'X-Client-Type',",
          "    value: 'Enterprise-API-Test'",
          "});",
          "",
          "pm.request.headers.add({",
          "    key: 'X-Request-ID',",
          "    value: pm.environment.get('uuid')",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Enterprise Post-request Validation",
          "const responseTime = pm.response.responseTime;",
          "const statusCode = pm.response.code;",
          "",
          "console.log('üìä Response Time:', responseTime + 'ms');",
          "console.log('üìä Status Code:', statusCode);",
          "",
          "// Enterprise performance thresholds",
          "pm.test('Enterprise Performance: Response time < 500ms', function() {",
          "    pm.expect(responseTime).to.be.below(500);",
          "});",
          "",
          "// Security headers validation",
          "pm.test('Enterprise Security: Required headers present', function() {",
          "    pm.expect(pm.response.headers.get('X-Content-Type-Options')).to.exist;",
          "    pm.expect(pm.response.headers.get('X-Frame-Options')).to.exist;",
          "});",
          "",
          "// Response structure validation",
          "if (statusCode >= 200 && statusCode < 300) {",
          "    pm.test('Enterprise Standards: Valid JSON response', function() {",
          "        pm.response.to.be.json;",
          "    });",
          "}"
        ]
      }
